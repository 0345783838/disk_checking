<UserControl
    x:Class="DiskInspection.Resources.Styles.CustomButton2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Resources.Styles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    Width="200"
    Height="100"
    mc:Ignorable="d">
    <Border Padding="5" CornerRadius="7">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{Binding BackgroundBrush, ElementName=root}" />
                <Setter Property="Cursor" Value="Hand" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#9ebaf3" />
                        <!--  Màu khi hover  -->
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="DarkGray" />
                        <!--  Màu khi hover  -->
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <!--<ColumnDefinition Width="Auto"/>-->
            </Grid.ColumnDefinitions>

            <!--  Icon trái  -->
            <Image
                Grid.Column="0"
                Width="{Binding IconWidth, ElementName=root}"
                Height="{Binding IconHeight, ElementName=root}"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Source="{Binding LeftIcon, ElementName=root}" />

            <!--  Nội dung giữa  -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock
                    FontSize="{Binding FontSize, ElementName=root}"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding Title, ElementName=root}" />
            </StackPanel>

            <!--  Icon phải  -->
            <!--<Image Grid.Column="2"
                   Source="{Binding RightIcon, ElementName=root}"
                   Width="60"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>-->
        </Grid>
    </Border>
</UserControl>
