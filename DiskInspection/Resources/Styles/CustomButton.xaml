<UserControl
    x:Class="DiskInspection.Resources.Styles.CustomButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Resources.Styles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    Width="200"
    Height="100"
    mc:Ignorable="d">
    <Border Padding="10" CornerRadius="15">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{Binding BackgroundBrush, ElementName=root}" />
                <Setter Property="Cursor" Value="Hand" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#9ebaf3" />
                        <!--  Màu khi hover  -->
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="DarkGray" />
                        <!--  Màu khi hover  -->
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="29*" />
                <!--<ColumnDefinition Width="Auto"/>-->
            </Grid.ColumnDefinitions>

            <!--  Icon trái  -->
            <Border Grid.Column="0">
                <Image
                    Width="{Binding IconWidth, ElementName=root}"
                    Height="{Binding IconHeight, ElementName=root}"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{Binding LeftIcon, ElementName=root}" />
            </Border>

            <!--  Nội dung giữa  -->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="14"
                    Foreground="White"
                    Opacity="0.8"
                    Text="{Binding Title, ElementName=root}" />
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding Value, ElementName=root}" />
            </StackPanel>

            <!--  Icon phải  -->
            <!--<Image Grid.Column="2"
                   Source="{Binding RightIcon, ElementName=root}"
                   Width="60"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>-->
        </Grid>
    </Border>
</UserControl>
