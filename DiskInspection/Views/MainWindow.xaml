<Window
    x:Class="DiskInspection.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myControl="clr-namespace:Heal.MyControl;assembly=ImageCtlWPF"
    Title="Disks Inspection"
    Width="1600"
    Height="900"
    MinWidth="1280"
    MinHeight="800"
    Style="{StaticResource WindowStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid>
                <StackPanel x:Name="MenuTools" Orientation="Vertical">
                    <DockPanel x:Name="dpnMenu" Margin="5,0,0,0">
                        <Menu
                            x:Name="MenuStrip"
                            DockPanel.Dock="Top"
                            FontSize="13">
                            <MenuItem Header="_Menu" />
                            <MenuItem Header="_Tools" />
                            <MenuItem Header="_Help" />
                        </Menu>
                    </DockPanel>
                    <DockPanel Margin="5,0,0,0">
                        <ToolBar Background="Transparent">
                            <ToolBar.Resources>
                                <Style x:Key="btToolBarStyle" TargetType="Button">
                                    <Setter Property="Margin" Value="10,0,10,0" />
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>
                            </ToolBar.Resources>
                            <Button
                                x:Name="btnSettings"
                                Margin="0,0,0,0"
                                Click="btnSettings_Click"
                                Style="{StaticResource btToolBarStyle}"
                                ToolTip="Settings">
                                <Image
                                    Width="45"
                                    Height="45"
                                    Source="/Resources/Icons/settings.png"
                                    Style="{DynamicResource imageButton}" />
                            </Button>
                        </ToolBar>
                    </DockPanel>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
             
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
            </Grid>
        </Grid>
    </Grid>
</Window>
