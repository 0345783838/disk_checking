<Window
    x:Class="DiskInspection.Views.DebugWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myControl="clr-namespace:Heal.MyControl;assembly=ImageCtlWPF"
    xmlns:uc="clr-namespace:DiskInspection.Resources.Styles"
    xmlns:utils="clr-namespace:DiskInspection.Utils"
    Title="Offline Mode"
    Width="1366"
    Height="768"
    MinWidth="1366"
    MinHeight="768"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <utils:FileNameConverterMain x:Key="FileNameConverterMain" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="224*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="459*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="99" />
                <RowDefinition Height="135" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <GroupBox
                    Margin="5,5,5,5"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Header="Run Mode">
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <RadioButton
                            Name="rbWhiteLight"
                            Margin="-20,0,0,0"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="White Light"
                            FontSize="14"
                            GroupName="rbLightType"
                            IsChecked="True" />
                        <RadioButton
                            Name="rbUvLight"
                            Margin="40,0,0,0"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="UV Light"
                            FontSize="14"
                            GroupName="rbLightType"
                            IsChecked="False" />
                    </StackPanel>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="1">
                <GroupBox
                    Margin="5,5,5,5"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Header="Image Tools">
                    <StackPanel
                        Margin="0,0,0,-5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <uc:CustomButton
                            x:Name="btnLoadFolder"
                            Title="Load"
                            Width="160"
                            Height="80"
                            Margin="5,5,5,5"
                            EndColor="#1e5b53"
                            IconHeight="45"
                            IconWidth="45"
                            IsEnabled="{Binding ConfirmEnable}"
                            LeftIcon="/Resources/Icons/folder-browser.png"
                            MouseDown="btnLoadFolder_MouseDown"
                            StartColor="#ccffaa"
                            Value="Folder" />
                        <uc:CustomButton
                            x:Name="btnLoadImages"
                            Title="Load"
                            Width="160"
                            Height="80"
                            Margin="5,5,5,5"
                            EndColor="#b6c0c5"
                            IconHeight="45"
                            IconWidth="45"
                            IsEnabled="{Binding ConfirmEnable}"
                            LeftIcon="/Resources/Icons/load_image.png"
                            MouseDown="btnLoadImages_MouseDown"
                            StartColor="#18a5a7"
                            Value="Images" />
                    </StackPanel>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="2">
                <DataGrid
                    Name="dgImageInfoPaths"
                    Margin="10,5,10,5"
                    AlternationCount="15000"
                    AutoGenerateColumns="False"
                    EnableColumnVirtualization="True"
                    EnableRowVirtualization="True"
                    IsReadOnly="True"
                    ItemsSource="{Binding ImagesInfoList}"
                    RowHeight="35"
                    SelectedItem="{Binding SelectedImageInfo}"
                    SelectionMode="Single"
                    VirtualizingPanel.IsVirtualizing="True">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <!--  Cột số thứ tự  -->
                        <DataGridTemplateColumn Width="30" Header="ID">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding ID}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  Cột đường dẫn ảnh  -->
                        <DataGridTemplateColumn Width="*" Header="Image Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text="{Binding FilePath, Converter={StaticResource FileNameConverterMain}}"
                                        TextAlignment="Left" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Border
                Width="1"
                Margin="0,5,0,5"
                Background="DarkGray" />
        </Grid>
        <Grid Grid.Column="2">
            <GroupBox
                Margin="10,5,5,5"
                BorderBrush="Gray"
                BorderThickness="1"
                Header="Image">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                </Grid>
            </GroupBox>

        </Grid>
    </Grid>
</Window>
