<Window
    x:Class="DiskInspection.Views.SettingsWindows.CommonSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Views.SettingsWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="500"
    Height="430"
    Icon="/Resources/Icons/settings.png"
    ResizeMode="NoResize"
    Style="{DynamicResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="labelName" TargetType="Label">
                <Setter Property="Width" Value="90" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="15,5,0,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
            <Style x:Key="textBox" TargetType="TextBox">
                <Setter Property="Width" Value="70" />
                <Setter Property="Height" Value="22" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Right" />
                <Setter Property="Margin" Value="0,5,0,0" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style x:Key="stPanel" TargetType="StackPanel">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,5,0,0" />
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="233.616" />
            <RowDefinition Height="135.424" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            Header="Hardware Settings">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="CAM 1 IP:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbCam1Ip"
                        Width="120"
                        Style="{StaticResource textBox}"
                        Text="0.0.0.0" />
                    <Label
                        Width="115"
                        Content="Exposure Time:"
                        Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbCam1Exposure"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="3000" />
                    <Label
                        Width="35"
                        Margin="0,5,5,5"
                        Content="(ms)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Style="{StaticResource stPanel}">
                    <Label Content="CAM 2 IP:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbCam2Ip"
                        Width="120"
                        Style="{StaticResource textBox}"
                        Text="0.0.0.0" />
                    <Label
                        Width="115"
                        Content="Exposure Time:"
                        Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbCam2Exposure"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="3000" />
                    <Label
                        Width="35"
                        Margin="0,5,5,5"
                        Content="(ms)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="2" Style="{StaticResource stPanel}">
                    <Label Content="PLC IP:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbPlcIp"
                        Width="120"
                        Style="{StaticResource textBox}"
                        Text="192.168.0.211" />
                    <Label
                        Width="115"
                        Content="Port:"
                        Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbPlcPort"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="8000" />
                    <Label
                        Width="35"
                        Margin="0,5,5,5"
                        Content="(ms)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            Header="Software Setting">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Margin="0,-5,0,0"
                        Style="{StaticResource stPanel}">
                        <Label
                            Width="185"
                            Content="Save Enable:"
                            Style="{StaticResource labelName}" />
                        <CheckBox
                            Name="cbSaveEnable"
                            VerticalAlignment="Center"
                            Content="(Save 2D, 3D Pad)"
                            IsChecked="False" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,-5,0,0"
                        Style="{StaticResource stPanel}">
                        <Label
                            Width="185"
                            Content="Save Path:"
                            Style="{StaticResource labelName}" />
                        <TextBox
                            x:Name="tbSavePath"
                            Width="200"
                            HorizontalAlignment="Center"
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}"
                            Style="{StaticResource textBox}"
                            Text="/" />
                        <Button
                            x:Name="btnResultBrowser"
                            Width="30"
                            Height="20"
                            Margin="10,0,0,0"
                            Click="btnBrowser_Click"
                            Content="..."
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Width="190"
            Margin="310,1,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Name="btnSave"
                Width="80"
                Height="30"
                Margin="0,0,0,0"
                Click="btnSave_Click"
                Content="Save" />
            <Button
                Name="btnCancel"
                Width="80"
                Height="30"
                Margin="10,0,20,0"
                Click="btnCancel_Click"
                Content="Cancel" />
        </StackPanel>

    </Grid>
</Window>
