<Window
    x:Class="DiskInspection.Views.SettingsWindows.CommonSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Views.SettingsWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="549"
    Height="458"
    Icon="/Resources/Icons/settings.png"
    ResizeMode="NoResize"
    Style="{DynamicResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="labelName" TargetType="Label">
                <Setter Property="Width" Value="80" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="15,5,0,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
            <Style x:Key="textBox" TargetType="TextBox">
                <Setter Property="Width" Value="70" />
                <Setter Property="Height" Value="22" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Right" />
                <Setter Property="Margin" Value="0,5,0,0" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style x:Key="stPanel" TargetType="StackPanel">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,5,0,0" />
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="229*" />
            <RowDefinition Height="159*" />
            <RowDefinition Height="54*" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            Header="Hardware Settings">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="CAM 1 SN:" Style="{StaticResource labelName}" />
                    <ComboBox
                        x:Name="cbbCam1Sn"
                        Width="120"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontSize="15" />
                    <Label
                        Width="115"
                        Content="Exposure Time:"
                        Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbCam1Exposure"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="3000" />
                    <Label
                        Width="35"
                        Margin="0,5,5,5"
                        Content="(ms)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                    <Button
                        x:Name="btnCheckCamera1"
                        Width="28"
                        Height="28"
                        Margin="10,0,0,0"
                        Click="btnCheckCamera1_Click"
                        ToolTip="Check Connection">
                        <Image
                            Width="20"
                            Height="20"
                            Source="/Resources/Icons/lan.png"
                            Style="{DynamicResource imageButton}" />
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="1" Style="{StaticResource stPanel}">
                    <Label Content="CAM 2 SN:" Style="{StaticResource labelName}" />
                    <ComboBox
                        x:Name="cbbCam2Sn"
                        Width="120"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontSize="15" />
                    <Label
                        Width="115"
                        Content="Exposure Time:"
                        Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbCam2Exposure"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="3000" />
                    <Label
                        Width="35"
                        Margin="0,5,5,5"
                        Content="(ms)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                    <Button
                        x:Name="btnCheckCamera2"
                        Width="28"
                        Height="28"
                        Margin="10,0,0,0"
                        Click="btnCheckCamera2_Click"
                        ToolTip="Check Connection">
                        <Image
                            Width="20"
                            Height="20"
                            Source="/Resources/Icons/lan.png"
                            Style="{DynamicResource imageButton}" />
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="2" Style="{StaticResource stPanel}">
                    <Label Content="PLC IP:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbPlcIp"
                        Width="120"
                        Style="{StaticResource textBox}"
                        PreviewTextInput="tbPlcIp_PreviewTextInput"
                        Text="192.168.0.211" />
                    <Label
                        Width="115"
                        Content="Port:"
                        Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbPlcPort"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="8000" />
                    <Label
                        Width="35"
                        Margin="0,5,5,5"
                        Content=""
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                    <Button
                        x:Name="btnCheckPlc"
                        Width="28"
                        Height="28"
                        Margin="10,0,0,0"
                        Click="btnCheckPlc_Click"
                        ToolTip="Check Connection">
                        <Image
                            Width="20"
                            Height="20"
                            Source="/Resources/Icons/lan.png"
                            Style="{DynamicResource imageButton}" />
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            Header="Software Setting">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,0"
                        Style="{StaticResource stPanel}">
                        <Label
                            Width="185"
                            Content="Save Enable:"
                            Style="{StaticResource labelName}" />
                        <CheckBox
                            Name="cbSaveEnable"
                            VerticalAlignment="Center"
                            Content="(Enable saving images)"
                            IsChecked="False" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource stPanel}">
                        <Label
                            Width="185"
                            Content="Save Path:"
                            Style="{StaticResource labelName}" />
                        <TextBox
                            x:Name="tbSavePath"
                            Width="200"
                            Height="30"
                            HorizontalAlignment="Center"
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}"
                            IsReadOnly="True"
                            Style="{StaticResource textBox}"
                            Text="/" />
                        <Button
                            x:Name="btnResultBrowser"
                            Width="32"
                            Height="32"
                            Margin="10,0,0,0"
                            Click="btnBrowser_Click"
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Resources/Icons/folder-browser.png"
                                Style="{DynamicResource imageButton}" />
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource stPanel}">
                        <Label
                            Width="185"
                            Content="Save Option:"
                            Style="{StaticResource labelName}" />
                        <RadioButton
                            x:Name="rbSaveOptionResultOrigin"
                            VerticalAlignment="Center"
                            Content="Origin + Result"
                            GroupName="SaveOption"
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}" />
                        <RadioButton
                            x:Name="rbSaveOptionResult"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="Result"
                            GroupName="SaveOption"
                            IsChecked="True"
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}" />
                        <RadioButton
                            x:Name="rbSaveOptionOrigin"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="Origin"
                            GroupName="SaveOption"
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}" />
                        <RadioButton
                            x:Name="rbSaveOptionDebug"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="Debug"
                            GroupName="SaveOption"
                            IsEnabled="{Binding IsChecked, ElementName=cbSaveEnable}" />
                    </StackPanel>

                </Grid>
            </Grid>
        </GroupBox>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Width="190"
            Margin="310,1,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Name="btnSave"
                Width="80"
                Height="30"
                Margin="0,0,0,0"
                Click="btnSave_Click"
                Content="Save" />
            <Button
                Name="btnCancel"
                Width="80"
                Height="30"
                Margin="10,0,20,0"
                Click="btnCancel_Click"
                Content="Cancel" />
        </StackPanel>

    </Grid>
</Window>
