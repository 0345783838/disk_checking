<Window
    x:Class="DiskInspection.Views.ParamsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Parameters"
    Width="400"
    Height="570"
    Icon="/Resources/Icons/settings.png"
    ResizeMode="NoResize"
    Style="{DynamicResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    Closed="Window_Closed"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="labelName" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Width" Value="185" />
                <Setter Property="Margin" Value="15,5,0,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
            <Style x:Key="textBox" TargetType="TextBox">
                <Setter Property="Width" Value="70" />
                <Setter Property="Height" Value="22" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Right" />
                <Setter Property="Margin" Value="0,5,0,0" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style x:Key="stPanel" TargetType="StackPanel">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,5,0,0" />
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="153*" />
            <RowDefinition Height="200*" />
            <RowDefinition Height="201*" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            Header="AI Params">
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Detect Threshold:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbDetectThreshold"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="0.1" />
                    <Label
                        Content="(0.00 - 1.00)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Detect IoU:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbDetectIoU"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="0.1" />
                    <Label
                        Content="(0.00 - 1.00)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Segment Threshold:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbSegmentThreshold"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="0.9" />
                    <Label
                        Content="(0.00 - 1.00)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            Header="Caliper Params">
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Min Edge Distance:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbMinEdgeDistance"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="4" />
                    <Label
                        Content="(0 - 10)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Max Edge Distance:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbMaxEdgeDistance"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="15" />
                    <Label
                        Content="(1 - 100)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Length/Width Rate:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbLengthRate"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="0.95" />
                    <Label
                        Content="(0.00 - 1.00)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Caliper Thickness List:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbThicknessList"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="1, 3, 5" />
                    <Label
                        Content="(eg: 1,3,5)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            Header="Disk Judgement Params">
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Total Disks:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbTotalDisks"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="4" />
                    <Label
                        Content="(0 - 100)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="2 Disk Min Distance:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbDiskMinDistance"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="34" />
                    <Label
                        Content="(pixels)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="2 Disk Max Distance:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbDiskMaxDistance"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="86" />
                    <Label
                        Margin="5,0,0,0"
                        Content="&gt; Min (pixels)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Style="{StaticResource stPanel}">
                    <Label Content="Disk Min Area:" Style="{StaticResource labelName}" />
                    <TextBox
                        x:Name="tbDiskMinArea"
                        PreviewTextInput="NumberValidationTextBox"
                        Style="{StaticResource textBox}"
                        Text="150" />
                    <Label
                        Content="(pixels)"
                        FontSize="12"
                        Style="{StaticResource labelName}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
