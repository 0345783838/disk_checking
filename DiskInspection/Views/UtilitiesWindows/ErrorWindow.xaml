<Window
    x:Class="DiskInspection.Views.UtilitiesWindows.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Views.UtilitiesWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Error"
    Width="350"
    Height="350"
    Background="#FFFFFF"
    Icon="/Resources/Icons/error.png"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140*" />
            <RowDefinition Height="72*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>

        <!--  Error Message TextBlock  -->
        <Border Background="IndianRed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Width="75"
                    Height="75"
                    Source="/Resources/Icons/error.png" />
                <Label
                    Grid.Row="1"
                    Margin="0,-5,0,0"
                    HorizontalAlignment="Center"
                    Content="Error"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White" />
            </Grid>
        </Border>
        <TextBlock
            Name="tbContent"
            Grid.Row="1"
            Margin="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="15"
            FontWeight="SemiBold"
            Foreground="Gray"
            Text="Can not insert to Database"
            TextWrapping="Wrap" />

        <!--  OK Button  -->
        <Border
            Name="bdOK"
            Grid.Row="2"
            Width="100"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="IndianRed"
            CornerRadius="10"
            MouseDown="bdOK_MouseDown">
            <Label
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="OK"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="White" />
        </Border>

    </Grid>
</Window>
