<Window
    x:Class="DiskInspection.Views.UtilitiesWindows.WaitingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DiskInspection.Views.UtilitiesWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Waiting..."
    Width="350"
    Height="169"
    Background="#FFF0F0F0"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53" />
            <RowDefinition Height="39" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <DockPanel>
                <Label
                    x:Name="lbStatus"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Processing..."
                    FontSize="15"
                    FontWeight="Bold" />
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1">
            <DockPanel>
                <ProgressBar
                    Width="300"
                    Height="16"
                    Margin="0,0,0,0"
                    Foreground="#FF06B025"
                    IsIndeterminate="True"
                    LargeChange="0" />
            </DockPanel>
        </Grid>
        <Grid Grid.Row="2">
            <DockPanel>
                <Button
                    Margin="0,-10,0,0"
                    x:Name="btOK"
                    Width="100"
                    
                    VerticalAlignment="Center"
                    Click="btOK_Click"
                    Content="OK" />
            </DockPanel>
        </Grid>
    </Grid>
</Window>
